{
  "name": "vik-ramanujam-resume",
  "version": "0.0.9",
  "description": "Vik Ramanujam's Resume",
  "scripts": {
    "build:assets": "node-sass assets --importer=node_modules/node-sass-tilde-importer -o build --source-map=true --output-style=compressed ",
    "build:assets:watch": "node-sass assets --importer=node_modules/node-sass-tilde-importer -w assets/styles.scss -o build --source-map=true --output-style=compressed ",
    "build:images": "cp -r ./images ./build",
    "build:images:watch": "nodemon --watch images --exec yarn run build:images",
    "build:base": "cp -r ./public/* ./build",
    "build:base:watch": "nodemon --watch ./public --exec yarn run build:base",
    "build:markdown": "babel-node index.js",
    "build:markdown:watch": "cross-env SERVE=true babel-node index.js",
    "build": "rimraf build && mkdir -p build && echo 'BUILDING...' && npm-run-all --parallel build:base build:markdown build:assets build:images",
    "build:watch": "npm-run-all --parallel build:base:watch build:markdown:watch build:assets:watch build:images:watch",
    "dev": "yarn run build:watch",
    "preview": "babel-node preview.js",
    "serve": "live-server --no-browser ./build",
    "push:gh-pages": "git checkout master && mv build/* . && git add . &&  git commit -m 'Build from dev branch' && git push --force && git checkout development --force",
    "deploy": "yarn run build && yarn run push:gh-pages",
    "spell": "cat ./tests/spellcheck.sh | bash",
    "jaunty": "jaunty-sg"
  },
  "resolutions": {
    "node-sass": "^4.12.0"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piggyslasher/piggyslasher.github.io.git"
  },
  "keywords": [
    "resume",
    "developer",
    "json",
    "resume",
    "no",
    "javascript",
    "react"
  ],
  "author": "Vik Ramanujam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piggyslasher/resume/issues"
  },
  "homepage": "https://github.com/piggyslasher/resume#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-util-promisify": "^0.2.2",
    "babel-preset-env": "^1.7.0",
    "chokidar": "^2.0.4",
    "coveralls": "^3.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-sort-class-members": "^1.3.1",
    "figlet": "^1.2.0",
    "live-server": "^1.2.0",
    "lodash": "^4.17.10",
    "markdown-it": "^8.4.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-header-sections": "^1.0.0",
    "markdown-it-headinganchor": "^1.3.0",
    "markdown-it-replacements": "^1.0.1",
    "markdown-it-smartarrows": "^1.0.1",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-to-html": "cwjohan/markdown-to-html",
    "marked": "^4.0.10",
    "marked-terminal": "^2.0.0",
    "node-sass": "^4.13.1",
    "node-sass-middleware": "^0.11.0",
    "node-sass-tilde-importer": "^1.0.2",
    "nodemon": "^1.17.4",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^2.6.2",
    "vertical-rhythm-reset": "^1.1.0"
  },
  "devDependencies": {
    "babel-plugin-import-directory": "^1.0.3",
    "cross-env": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2"
  }
}
